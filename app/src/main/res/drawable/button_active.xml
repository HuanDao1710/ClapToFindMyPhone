<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/green" /> <!-- Màu viền khi button được nhấn -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Màu viền mặc định -->
            <stroke
                android:width="2dp"
                android:color="@color/green" /> <!-- Màu viền mặc định -->
        </shape>
    </item>
</selector>